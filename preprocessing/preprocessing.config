params {

    // -- trimmomatic --//
    run_trimmomatic = true
    adapter_fasta = "/data/pam/software/trimmomatic/adapter_fastas/solexa-with-nextseqPR-adapters.fasta"
    trim_window_size = 4 // sliding window size for read trimming
    trim_baseq = 20 // Average base quality cutoff for the sliding window for trimmomatic
    trim_min_length = 70 // Minimum read length retained following trimming
    trimmomatic_options = "ILLUMINACLIP:${params.adapter_fasta}:2:10:7:1 CROP:151 SLIDINGWINDOW:${params.trim_window_size}:${params.trim_baseq} MINLEN:${params.trim_min_length}"

    // -- TRF --//
    run_trf = false
    trf_cli_options= '2 7 7 80 10 50 500 -h -ngs' //"2 5 7 80 10 50 2000 -h -ngs"
    publish_intermediate_trf = false

    // -- bmtagger --//
    run_bmtagger = false
    bmtagger_db = "/data/pam/software/bmtagger"
    bmtagger_host = "T2T-CHM13v2.0"
    publish_host_reads = false

    // output files
    publish_trimmomatic_reads = false // publish intermediate reads 
    publish_trf_reads = false // publish intermediate trf fastas and reads 
    publish_clean_reads = true // publish preprocessed fastqs into your outdir parameter

    // -- scripts --//
    script_src_path="${projectDir}/assorted-sub-workflows/preprocessing/bin/" 
    
    // skip preprocessing if all steps are false
    if ((params.run_trimmomatic == false) && (params.run_trf == false) && (params.run_bmtagger == false)){
        skip_preprocessing = true
    }
    else {
        skip_preprocessing = false
    }
}
