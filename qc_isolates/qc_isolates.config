params {
    checkm2_db = "/data/pam/software/checkm2_db/uniref100.KO.1.dmnd"
    gunc_db = "/data/pam/software/gunc/GTDB/gunc_db_gtdb95.dmnd"
    gtdbtk_db = "/data/pam/software/GTDBTk/release226"
    fasta_ext = "fa"
    min_contig = 1000
    report_config = "${projectDir}/assorted-sub-workflows/qc_isolates/assets/report_config.json"
    temp_file_storage = null
    temp_space = "30GB"
}

process {
    withName:GTDBTK {
        maxForks = 10
        clusterOptions = "-R 'select[tmp>${params.temp_space}]'"
    }
}